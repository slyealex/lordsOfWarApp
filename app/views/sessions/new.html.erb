<div class="container">
  <h1>ADMIN LOGIN</h1>

  <%= form_tag sessions_path do %>
    <div class="form-group col-md-6">
      <%= label_tag :email %>
      <%= text_field_tag :email, "", class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= submit_tag "Enter", class: "btn btn-default" %>
    </div>
  <% end %>
</div>
