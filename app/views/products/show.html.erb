<div class="container">

  <h1><%= @product.name %></h1>

  <%= image_tag @product.picture %>

  <p><%= @product.info %></p>

  <h3><%= link_to "Website", @product.website %></h3>

  <% if current_user %>
    <%= link_to "Delete Product", product_path(@product), method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>


  <br>
  <br>
  <%= link_to "Back", products_path %>

</div>
